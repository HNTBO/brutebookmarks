[Unit]
Description=Bookmarks Speed Dial Dashboard
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/bookmarks.fmotion.fr
ExecStart=/usr/bin/node server.js
Restart=on-failure
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bookmarks-dashboard

Environment=NODE_ENV=production
Environment=PORT=3000

[Install]
WantedBy=multi-user.target
